apiVersion: cluster.x-k8s.io/v1beta1
kind: Cluster
metadata:
  # Name of your cluster
  name: vns-cluster-capi
  # Must match the Supervisor Namespace you created
  namespace: vns
spec:
  clusterNetwork:
    services:
      cidrBlocks: ["10.96.0.0/22"]
    pods:
      cidrBlocks: ["192.168.0.0/24"]
    serviceDomain: "cluster.local"
  topology:
    # Use the versioned ClusterClass provided by your Supervisor
    # Check 'kubectl get clusterclass -A' to verify this name
    class: tanzukubernetescluster
    # Must match an available TanzuKubernetesRelease (TKR)
    version: v1.28.7---vmware.1-fips.1-tkg.1.ubuntu
    controlPlane:
      replicas: 1
    workers:
      machineDeployments:
        - class: node-pool
          name: node-pool-1
          replicas: 1
    variables:
      - name: vmClass
        value: best-effort-xsmall
      - name: storageClass
        value: storageclass
      - name: defaultStorageClass
        value: storageclass